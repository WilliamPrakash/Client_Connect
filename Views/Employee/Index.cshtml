@{
    ViewData["Title"] = "Employee";
}

@model List<Employee>

<div class="text-center">
    <h1 class="display-4">Employees</h1>
    <br />
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Occupation</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.Id</td>
                    <td>@employee.Name</td>
                    <td>@employee.Email</td>
                    <td>@employee.Occupation</td>
                    <td><a asp-controller="Employee" asp-action="AddEditEmployeeView" asp-route-id="@employee.Id">Edit</a> </td>
                    <td><a asp-controller="Employee" asp-action="DeleteEmployee" asp-route-id="@employee.Id">Delete</a> </td>
                </tr>
            }
        </tbody>
    </table>
    <a class="btn btn-primary mt-4" asp-controller="Employee" asp-action="AddEditEmployeeView">Add</a>
</div>
