@{
    ViewData["Title"] = "Employee";
}

@model List<Employee>

<div class="text-center">
    <h1 class="display-4">Employees</h1>
    <br />
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Occupation</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.Id</td>
                    <td>@employee.Name</td>
                    <td>@employee.Email</td>
                    <td>@employee.Occupation</td>
                    <td>
                        <a asp-controller="Employee" asp-action="Edit" asp-route-id="@employee.Id">Edit</a> |
                        <a asp-controller="Employee" asp-action="Delete" asp-route-id="@employee.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
