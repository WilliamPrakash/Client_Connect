@{
    ViewData["Title"] = "Edit Employee";
}

@model Employee

<h1 class="display-4 text-center">Edit Employee</h1>

<form asp-action="EditEmployee" asp-controller="Employee">
    <input hidden class="form-control" type="number" asp-for="Id" />

    <label class="mt-4">Name:</label>
    <input class="form-control" type="text" asp-for="Name"/>

    <label class="mt-4">Email:</label>
    <input class="form-control" type="text" asp-for="Email" />

    <label class="mt-4">Occupation:</label>
    <input class="form-control" type="text" asp-for="Occupation" />

    <button class="btn btn-primary mt-4" type="submit">Submit employee edits</button>
</form>
